# === General ===
ENVIRONMENT=development

# === Kafka ===
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW=event.raw
KAFKA_TOPIC_ENRICHED=event.enriched
KAFKA_TOPIC_TRIGGERED=event.triggered
KAFKA_TOPIC_DLQ=event.dlq

# === PostgreSQL ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=prism
POSTGRES_USER=prism
POSTGRES_PASSWORD=prism_dev

# === DuckDB ===
DUCKDB_PATH=/data/duckdb/prism.duckdb

# === Redis ===
REDIS_URL=redis://localhost:6379

# === Event Ingest API (Rust) ===
INGEST_API_PORT=8080
INGEST_API_LOG_LEVEL=info

# === Backend API (Python) ===
BACKEND_API_PORT=8001
BACKEND_API_LOG_LEVEL=info
BACKEND_API_QUERY_TIMEOUT_SECONDS=30

# === Frontend (Next.js) ===
NEXT_PUBLIC_INGEST_API_URL=http://localhost:8080
NEXT_PUBLIC_BACKEND_API_URL=http://localhost:8001
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
NEXTAUTH_SECRET=
SYSTEM_ADMIN_EMAILS=
