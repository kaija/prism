{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prism Trigger Rule",
  "type": "object",
  "required": ["name", "dsl", "actions"],
  "properties": {
    "rule_id": { "type": "string" },
    "project_id": { "type": "string" },
    "name": { "type": "string", "minLength": 1, "maxLength": 255 },
    "description": { "type": "string" },
    "dsl": { "type": "string", "minLength": 1, "description": "AviatorScript DSL expression" },
    "status": { "type": "string", "enum": ["active", "inactive", "draft"] },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "enum": ["webhook", "kafka_publish", "notification", "tag_profile", "update_attribute"] },
          "enabled": { "type": "boolean", "default": true },
          "url": { "type": "string", "format": "uri" },
          "topic": { "type": "string" },
          "headers": { "type": "object" },
          "payload_template": { "type": "string" }
        }
      },
      "minItems": 1
    }
  }
}
